{
  "name": "Chrandora",
  "version": "0.1",
  "description": "Play or pause Pandora.",
  "background": {
    "scripts": ["jquery.min.js",
                "togglePandoraState.js",
                "background.js"]
  },
  "permissions":  [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2,
  "browser_action": {
		"name": "Click to play or pause Pandora",
    "default_icon": "images/play_pause.png",
    "default_title": "Chrandora"
  },
  "content_scripts": [
  {
    "matches": ["*://*/*"],
    "js": ["inject.js"]
  }
  ]
}
